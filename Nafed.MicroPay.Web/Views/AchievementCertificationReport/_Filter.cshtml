@using Nafed.MicroPay.Model
    @using MicroPay.Web.Models
    @model EmpAchievementCertificationReportFilterVM
    @{
        Layout = null;

        List<SelectListModel> reportCategory = new List<SelectListModel>();
        reportCategory.Add(new SelectListModel { id = 1, value = "Acheivement" });
        reportCategory.Add(new SelectListModel { id = 2, value = "Certification" });
    }

    <div class="advance-search" style="">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

            <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">

                @Html.Label("Search")
            </h4>

        </div>

        <hr style="background-color:#fff !important;">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="form-group">

                <div class="row">
                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary">

                        <i class="fas fa-filter"></i> Filter By :

                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 choices__inner">

                        @Html.DropDownListFor(model => model.SelectedReportType, new SelectList(reportCategory, "id", "value"), "Select Report Type", new { @class = "custom-select" })
                        @Html.ValidationMessageFor(model => model.SelectedReportType, null, new { @class = "text-danger" })
                    </div>


                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                        @Html.LabelFor(model => model.SelectedEmployeeID, htmlAttributes: new { @class = "" })
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 choices__inner">

                        @Html.DropDownListFor(model => model.SelectedEmployeeID, new SelectList(Model.employees, "id", "value"), "Select", new { @class = "custom-select" })
                        @Html.ValidationMessageFor(model => model.SelectedEmployeeID, null, new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                        @Html.LabelFor(model => model.fromDate, htmlAttributes: new { @class = "required" })
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">

                        @Html.TextBoxFor(model => model.fromDate, String.Format("{0:dd/MM/yyyy}", Model.fromDate),
           new { @type = "text", @class = "form-control datepicker", @id = "dtFromDate", @placeholder = "dd/mm/yyyy", @autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.fromDate, null, new { @class = "text-danger" })
                        @Html.ValidationMessage("DateCompareValidator", null,new { @class = "text-danger" })
                    </div>

                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">

                        @Html.LabelFor(model => model.toDate, htmlAttributes: new { @class = "required" })
                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">

                        @Html.TextBoxFor(model => model.toDate, String.Format("{0:dd/MM/yyyy}", Model.toDate),
           new { @type = "text", @class = "form-control datepicker", @id = "dtToDate", @placeholder = "dd/mm/yyyy", @autocomplete = "off" })

                        @Html.ValidationMessageFor(model => model.toDate, null, new { @class = "text-danger" })
                    </div>

                </div>

            </div>
        </div>
        <hr style="background-color:#fff !important;">
        <div class="row mt-3">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">


                <span>

                    @Html.ValidationMessage("OtherValidation", null, new { @class = "text-danger" })
                </span>

                <button type="submit" id="submitform" class="btn btn-warning" title="Click here, to search records.">
                    <i class="fa fa-download"></i> Export Report
                </button>



            </div>
        </div>

    </div>


<script type="text/javascript">

    $("#dtFromDate,#dtToDate").datepicker({ dateFormat: 'dd/mm/yy', changeYear: true, maxDate: new Date() });

</script>