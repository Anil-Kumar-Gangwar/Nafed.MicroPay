
@model MicroPay.Web.Models.ArrearManualDataViewModel


<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th class="text-right">
                Month
            </th>
            <th class="text-right">
                Year
            </th>
            <th class="text-right">
                DA Rates
            </th>

            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.ArrearManualDataList != null && Model.ArrearManualDataList.Count() > 0)
            {
                var sno = 1;
                foreach (var item in Model.ArrearManualDataList)
                {
                    <tr>
                        <td> @sno</td>
                       
                        <td class="text-right"> @item.Month</td>
                        <td class="text-right"> @item.Year</td>
                        <td class="text-right"> @item.E_01</td>
                        @if (Model.userRights.Edit)
                        {
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "ActualDARates", new { ID = @item.ID })" title="Click here, to edit this record" data-toggle="tooltip">
                                    <i class="far fa-edit text-info" aria-hidden="true"></i>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "ActualDARates", new { ID = @item.ID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        }
                        @if (Model.userRights.Delete)
                        {
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "ActualDARates", new { ID = @item.ID })" title="Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "ActualDARates", new { ID = @item.ID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                    </tr>

                    sno++;
                }
            }

        }


    </tbody>
</table>




