                        <td> @item.DepartmentName</td>
                        <td> @item.DesignationName</td>
                        <td>  </td>
                        @*@if (Model.userRights.Edit)
                        {*@
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "Appraisal", new {appraisalFormID=item.AppraisalFormID,reportingTo=item.ReportingToID,reviewingTo=item.ReviewerTo,acceptanceAuthority=item.AcceptanceAuthority, empID=item.EmployeeID })" title="Click here, to view this record" data-toggle="tooltip">
                                <i class="far fa-eye text-info" aria-hidden="true"></i>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "Appraisal", new { appraisalFormID = item.AppraisalFormID, reportingTo = item.ReportingToID, reviewingTo = item.ReviewerTo, acceptanceAuthority = item.AcceptanceAuthority, empID = item.EmployeeID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        @*}*@                     
                    </tr>
                    sno++;
                }
            }
        }
    </tbody>
</table>