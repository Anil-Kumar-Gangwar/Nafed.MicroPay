                        @Html.ValidationMessageFor(model => model.To_date, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="row">
                    @Html.LabelFor(model => model.Restricted_Salary_as_Per_bonus, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6 col-xs-12 mb-2 required" })

                    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 mb-2">
                        @Html.EditorFor(model => model.Restricted_Salary_as_Per_bonus, new { htmlAttributes = new { @class = "form-control", @placeholder = "Restricted Salary", @type = "number" } })
                        @Html.ValidationMessageFor(model => model.Restricted_Salary_as_Per_bonus, "", new { @class = "text-danger" })
                      
                    </div>
                </div>
