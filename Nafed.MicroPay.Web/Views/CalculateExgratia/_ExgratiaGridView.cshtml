@model MicroPay.Web.Models.ExgratiaViewModel


<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                 Code
            </th>
            <th>
                Employee
            </th>
            <th>
                Branch
            </th>
            <th class="text-center">
                Financial Year
            </th>
            <th class="text-right">
               Amount
            </th>
           
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.listExgratia != null && Model.listExgratia.Count() > 0)
            {
                var sno = 1;

                foreach (var item in Model.listExgratia)
                {
                    <tr>
                        <td> @sno</td>
                        <td> @item.EmpCode</td>
                        <td> @item.Name</td>
                        <td> @item.branchName</td>
                        <td  class="text-center"> @item.FinancialYear</td>
                        <td class="text-right">@item.net_amount.ToString("#,##0.00")
 </td>
                       
                        @if (Model.userRights.Delete)
                        {
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "CalculateExgratia", new { ExgratiaID = item.ExgratiaID })" title="Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "CalculateExgratia", new { ExgratiaID = item.ExgratiaID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                    </tr>
                    sno++;
                }
            }

        }

    </tbody>
</table>


