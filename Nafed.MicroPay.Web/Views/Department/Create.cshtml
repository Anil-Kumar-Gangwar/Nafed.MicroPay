@model Nafed.MicroPay.Model.Department
@{
    ViewBag.Title = "Create Department";
    ViewBag.NavigationTitle = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card_new_header alert alert-danger">
    <div class="col-sm-6">
        NOTE : Fields marked with (*) are compulsory fields
    </div>
    <div class="col-sm-6 text-right">
        <b>@*[ Characters < > # ^ ; | $ are not allowed ]*@</b>
    </div>
</div>
@using (Html.BeginForm("Create", "Department", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="card_new_body">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mb-2">

                <div class="row">
                    @Html.LabelFor(model =>model.DepartmentCode , htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6 col-xs-12 mb-2 required" })

                    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 mb-2">
                        @Html.EditorFor(model => model.DepartmentCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "To be generated", @maxlength = "20", @readonly = "readonly" } })
                        @*@Html.ValidationMessageFor(model => model.DepartmentCode, "", new { @class = "text-danger" })
                        @Html.ValidationMessage("DepartmentCodeAlreadyExist", "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-lg-4 col-md-4 col-sm-6 col-xs-12 mb-2 required" })
                    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 mb-2">
                        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Department Name", @maxlength = "50" } })
                        @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                        @Html.ValidationMessage("DepartmentNameAlreadyExist", "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 mb-2">
                        @Html.LabelFor(model => model.IsActive)
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 mb-2">
                        <div class="form-group">
                            <label class="switch">
                                @Html.CheckBoxFor(model => model.IsActive, new { @checked = "checked" })
                                <div class="slider round">
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="divider-chevron"></div>
                <span class="pull-right">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-light btn-md toggle-tooltip", @title = "Click here, to redirect on list page" })
                    <input type="submit" value="Create" class="btn btn-info btn-md pull-center toggle-tooltip" title="Click here, to save current record" />
                </span>
            </div>
        </div>

    </div>
}

