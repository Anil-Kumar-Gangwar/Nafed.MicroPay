@model MicroPay.Web.Models.DesignationViewModel
@{
    ViewBag.Title = "Designation";
    ViewBag.NavigationTitle = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //  System.Globalization.CultureInfo Indian = new System.Globalization.CultureInfo("hi-IN");
}
<div class="">
    @using (Ajax.BeginForm("GetDesignationGridView", "Designation", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "divDesignationGridView" }))
    {
        <div class="row patty_panel" style="background-color: #0c858e; box-shadow: 0px 1px 2px;padding-top: 0px;">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2">

                <h4>
                    @Html.Label("SEARCH FILTERS")
                </h4>
            </div>

            <hr style="background-color:#fff !important;">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.LabelFor(model => model.designationID, htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                            @Html.DropDownListFor(model => model.designationID, new SelectList(Model.designationList, "id", "value"), "Select", new { @class = "custom-select" })
                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.cadreID, htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                            @Html.DropDownListFor(model => model.cadreID, new SelectList(Model.cadreList, "id", "value"), "Select", new { @class = "custom-select" })
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            <input type="submit" id="submitform" value="Search" title="Click here, to search records" class="btn btn-warning toggle-tooltip">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="card_new_header text-right">
        @if (Model.userRights.Create)
        {
            @Html.ActionLink("Create New", "Create", "Designation", null, new { @class = "btn btn-info btn-md", title = "Click here, to create new record", @data_toggle = "tooltip" })
        }
    </div>
    <div class="card_new_body">
        <div id="divDesignationGridView">
            @*@Html.Action("DesignationGridView")*@
        </div>
    </div>
    @*<div class="card_new_footer"></div>*@
</div>
@section scripts{


}











