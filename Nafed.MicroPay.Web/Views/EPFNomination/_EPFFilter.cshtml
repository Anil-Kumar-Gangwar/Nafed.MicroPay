@model Nafed.MicroPay.Model.CommonFilter
@using (Ajax.BeginForm("GetNominationList", "EPFNomination", new AjaxOptions { HttpMethod = "GET", OnSuccess="onEPFSuccess" }))
{
<div class="advance-search">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">
            <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
                @Html.Label("Search")
            </h4>
        </div>
        <hr style="background-color:#fff !important;">        
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="row">

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 text-secondary pr-0">
                            <i class="fas fa-filter"></i> Filter By :
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.Label("From Date", htmlAttributes: new { @class = "" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            
                            @Html.TextBoxFor(model => model.FromDate, String.Format("{0:dd/MM/yyyy}", Model.FromDate), new { @type = "text", @class = "form-control datepicker", @autocomplete = "off", @placeholder = "dd/mm/yyyy" })
                            @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.Label("To Date", htmlAttributes: new { @class = "" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(model => model.ToDate, String.Format("{0:dd/MM/yyyy}", Model.ToDate), new { @type = "text", @class = "form-control datepicker", @autocomplete = "off", @placeholder = "dd/mm/yyyy" })
                            @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pt-sm-2">
                            <button type="submit" id="submitform" value="Search" title="Click here, to search records" class="btn btn-warning toggle-tooltip">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>

                    </div>
                </div>
            </div>      
    </div>
</div>
}
<script type="text/javascript">
    function onEPFSuccess(data) {
        if (data.status == true)
        {
            $("#div-epf-nomination-grid").html(data.htmlData)
        }
    }

    $("#FromDate").datepicker({ dateFormat: 'dd/mm/yy', changeYear: true });
    $("#ToDate").datepicker({ dateFormat: 'dd/mm/yy', changeYear: true });
</script>