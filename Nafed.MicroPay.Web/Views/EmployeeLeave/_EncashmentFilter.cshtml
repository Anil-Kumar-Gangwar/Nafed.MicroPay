                         </div>*@
                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 text-right">

                    <span>
                        @Html.ValidationMessage("OtherValidation", null, new { @class = "text-danger" })
                    </span>

                    <button type="submit" class="btn btn-primary" name="ButtonType" value="Submit" title="Click here, to search records." id="btnSearch">
                        <i class="fa fa-search"></i> Search
                    </button>

                    <button type="button" class="btn btn-primary d-none" title="Click here, to update records." id="btnUpdateTDS">
                        Update
                    </button>

                    <button type="submit" class="btn btn-success d-none" name="ButtonType" value="Report" title="Click here, to export records." id="btnExport">
                        <i class="fa fa-file-excel"></i> Export
