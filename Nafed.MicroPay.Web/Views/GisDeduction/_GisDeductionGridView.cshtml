
@model MicroPay.Web.Models.GisDeductionViewModel



<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
               Branch
            </th>
            <th>
               Code
            </th>
            <th class="text-right">
                Amount
            </th>           
            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.GisDeductionList != null && Model.GisDeductionList.Count() > 0)
            {
                var sno = 1;
                foreach (var item in Model.GisDeductionList)
                {
                    <tr>
                        <td> @sno</td>
                            <td> @item.Category</td>
                            <td> @item.Code</td>
                            <td class="text-right">@string.Format("{0:F2}", @item.Rate)</td>
                            @if (Model.userRights.Edit)
                            {
                                <td class="text-center">
                                    @*<a href="@Url.Action("Edit", "GisDeduction", new { category = item.Category,code=item.Code })" title="Click here, to edit this record" data-toggle="tooltip">
                                        <i class="far fa-edit text-info" aria-hidden="true"></i>
                                    </a>*@
                                    @Html.EncodedImageActionLink("", "Edit", "GisDeduction", new { category = item.Category, code = item.Code }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                                </td>
                            }
                            @if (Model.userRights.Delete)
                            {
                                <td class="text-center">
                                    @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "GisDeduction", new {  category = item.Category,code=item.Code })" title="Click here, to delete this record">
                                        <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                    </a>*@
                                    @Html.EncodedImageActionLink("", "Delete", "GisDeduction", new { category = item.Category, code = item.Code }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                                </td>
                            }
                        </tr>

                    sno++;
                }
            }

        }

    </tbody>
</table>
