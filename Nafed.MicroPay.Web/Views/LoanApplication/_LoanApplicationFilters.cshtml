@using Nafed.MicroPay.Model;
@model LoanApplicationFilter


<div class="advance-search" style="">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">
        <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
            @Html.Label("Search")
        </h4>
    </div>
    @*@Html.HiddenFor(model => model.loggedInEmployeeID)*@
    <hr style="background-color:#fff !important;">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary pr-0">
                <i class="fas fa-filter"></i> Filter By :
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    @Html.Label("From", htmlAttributes: new { @class = "" })

                    @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

                </div>
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    @Html.Label("To", htmlAttributes: new { @class = "" })

                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })

                </div>
                @Html.ValidationMessage("DateValidation", "", new { @class = "text-danger" })
             
            </div>

            <div class="col-md-2">
                <div class="form-group">
                    @Html.Label("Status", htmlAttributes: new { @class = "" })


                    @Html.EnumDropDownListFor(model => model.ApplicationStatusID, "Select", new { @class = "custom-select" })

                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    @Html.Label("Employee", htmlAttributes: new { @class = "" })

                    @Html.DropDownListFor(model => model.EmployeeID, new SelectList(Model.EmployeeList, "id", "value"), "Select", new { @class = "custom-select" })
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 pt-lg-4">
                <button type="submit" id="submitform" value="Search" title="Click here, to search records" class="btn btn-warning toggle-tooltip">
                    <i class="fa fa-search"></i> Search
                </button>
            </div>
        </div>
    </div>
</div>
