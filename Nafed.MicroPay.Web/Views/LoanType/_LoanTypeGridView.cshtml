@using Nafed.MicroPay.Common;
@model MicroPay.Web.Models.LoanTypeViewModel

<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Loan Type
            </th>
            <th>
                Description
            </th>

            <th>
                Abbrevation
            </th>

            <th>
                Payment Type
            </th>

            <th>
                Max Loan Amount
            </th>


            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.LoanTypeList != null && Model.LoanTypeList.Count() > 0)
            {
                var sno = 1;
                foreach (var item in Model.LoanTypeList)
                {
                    <tr>
                        <td> @sno</td>
                        <td> @item.LoanType</td>
                        <td> @item.LoanDesc</td>

                        <td> @item.Abbriviation</td>
                        <td> @item.PaymentType</td>

                        <td class="text-right"> @string.Format("{0:F2}", @item.MaxLnAmount)</td>

                        @if (Model.userRights.Edit)
                        {
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "LoanType", new { LoanTypeId = item.LoanTypeId })" title="Click here, to edit this record" data-toggle="tooltip">
                                    <i class="far fa-edit text-info" aria-hidden="true"></i>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "LoanType", new { LoanTypeId = item.LoanTypeId }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        }
                        @if (Model.userRights.Delete)
                        {
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "LoanType",new { LoanTypeId = item.LoanTypeId })" title="Click here, to delete this record">
                                <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "LoanType", new { LoanTypeId = item.LoanTypeId }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                    </tr>

                    sno++;
                }
            }

        }

    </tbody>
</table>
