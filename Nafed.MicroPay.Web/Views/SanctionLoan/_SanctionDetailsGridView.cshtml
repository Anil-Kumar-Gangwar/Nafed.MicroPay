@model Nafed.MicroPay.Model.SanctionLoan

<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>#</th>
            @*<th>
                    SerialNo
                </th>*@
            <th class="">
                Employee Code
            </th>
            <th class="">
                Employee Name
            </th>
            <th class="">
                Loan Type
            </th>
            <th>
                Date of Avail Loan
            </th>
            <th>
                Sanction Date

            </th>
            <th>

                Sanction Amount
            </th>
            <th class="text-center">
                Loan Sanction
            </th>
            @*@if (Model.userRights.Edit)
                {*@
            <th class="text-center" style="width:60px">
                Edit
            </th>
            @*}*@
            @*@if (Model.userRights.Delete)
                {*@
            <th class="text-center" style="width:60px">
                Delete
            </th>
            @*}*@
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.SanctionLoanList != null && Model.SanctionLoanList.Count() > 0)
            {
                var sno = 1;
                foreach (var item in Model.SanctionLoanList)
                {
                    <tr>
                        <td>@sno</td>
                        @*<td> @item.SerialNo</td>*@
                        <td class=""> @item.EmpCode</td>
                        <td class=""> @item.EmployeeName</td>
                        <td class=""> @item.LoanTypeDesc</td>
                        <td class=""> @item.DateAvailLoan.Value.ToString("dd/MM/yyyy")</td>
                        <td class=""> @item.DateofSanc.Value.ToString("dd/MM/yyyy")</td>
                        <td class="text-center"> @item.SancAmt.Value.ToString("0.00")</td>
                        @*<td class="text-center"> @Nafed.MicroPay.Common.ExtensionMethods.BoolToYesNo(item.LoanSanc)</td>*@
                        <td class="text-center"> @Nafed.MicroPay.Common.ExtensionMethods.BoolToYesNo(item.LoanSanction)</td>

                        @*@if (Model.userRights.Edit)
                            {*@
                        <td class="text-center">
                            @*<a href="@Url.Action("Edit", "SanctionLoan", new { priorityNo = item.PriorityNo, mstLoanID = item.MstLoanID })" title="Click here, to edit this record" data-toggle="tooltip">
                                <i class="far fa-edit text-info" aria-hidden="true"></i>
                            </a>*@
                            @Html.EncodedImageActionLink("", "Edit", "SanctionLoan", new { priorityNo = item.PriorityNo, mstLoanID = item.MstLoanID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                        </td>
                        @*}
                            @if (Model.userRights.Delete)
                            {*@
                        <td class="text-center">
                            @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("DeleteSanction", "SanctionLoan", new { priorityNo = item.PriorityNo, DateAvailLoan = item.DateAvailLoan,mstLoanID=item.MstLoanID })" title="Click here, to delete this record">
                                <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                            </a>*@
                            @Html.EncodedImageActionLink("", "DeleteSanction", "SanctionLoan", new { priorityNo = item.PriorityNo, mstLoanID = item.MstLoanID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                        </td>
                        @*}*@
                    </tr>
                    sno++;
                }
            }

        }

    </tbody>
</table>


