
@{
    ViewBag.Title = "Separation List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="card_new_body">
        @using (Html.BeginForm("PostSuperAnnuatingList", "Separation", FormMethod.Post))
        {
            <div id="div-superan-list">
                @Html.Action("GetSuperAnnuatingList")
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                    <button type="submit" id="btnStart" value="Start" name="ButtonType" class="hide btn btn-primary toggle-tooltip mt-2" title="Click here, to start process.">
                      Start Process
                    </button> 
                    <button type="submit" id="btnClearance" value="Clearace" name="ButtonType" class="hide btn btn-secondary toggle-tooltip mt-2" title="Click here, to send for separation clearance.">
                      Send for Clearance
                    </button> 
                    <button type="submit" id="btnDivAppv" value="DivisionalApproval" name="ButtonType" class="hide btn btn-success toggle-tooltip mt-2" title="Click here, to send for no dues approval.">
                       Initiate No Dues Approval
                    </button> 
                </div>
            </div>
        }
    </div> 
</div>

<script type="text/javascript">
    function getValue(cntrl) {
        debugger;
        var indx = cntrl.substr(6);
        var status = $("#statusId_" + indx).val();
        if (status == 0) {
            $("#btnClearance").addClass("hide");
            $("#btnStart").removeClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
        if (status == 1) {
            $("#btnClearance").removeClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
        else if (status == 2) {
            $("#btnClearance").removeClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
        else if (status == 3) {
            $("#btnClearance").addClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
        else if (status == 6) {
            $("#btnClearance").addClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").removeClass("hide");
        }
        else if (status == 7) {
            $("#btnClearance").addClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
        else if (status == 8 || status == 4 || status == 5) {
            $("#btnClearance").addClass("hide");
            $("#btnStart").addClass("hide");
            $("#btnDivAppv").addClass("hide");
        }
    }
</script>