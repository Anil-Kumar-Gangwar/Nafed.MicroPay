@model MicroPay.Web.Models.SkillViewModel
<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Skill Type
            </th>
            <th>
                Skill
            </th>
            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model.listSkill != null && Model.listSkill.Count() > 0)
            {
                var sno = 1;
                foreach (var item in Model.listSkill)
                {
                    <tr>
                        <td> @sno</td>
                        <td> @item.SkillType</td>
                        <td> @item.Skill1</td>
                        @if (Model.userRights.Edit)
                        {
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "Skill", new { skillID = item.SkillId })" title="Click here, to edit this record" data-toggle="tooltip">
                                    <i class="far fa-edit text-info" aria-hidden="true"></i>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "Skill", new { skillID = item.SkillId }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        }
                        @if (Model.userRights.Delete && !item.IsDeleted) 
                        {
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "Skill", new { skillID = item.SkillId })" title="Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "Skill", new { skillID = item.SkillId }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                        else
                        {
                            <td></td>
                        }
                    </tr>
                    sno++;
                }
            }
        }

    </tbody>
</table>



