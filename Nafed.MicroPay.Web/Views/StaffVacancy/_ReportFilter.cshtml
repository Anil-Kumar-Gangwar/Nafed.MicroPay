@model MicroPay.Web.Models.StaffBudgetViewModel

<div class="advance-search" style="">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

        <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
            @Html.Label("Search")
        </h4>

    </div>
    <hr style="background-color:#fff !important;">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary">
                    <i class="fas fa-filter"></i> Filter By :
                </div>

                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.selectYearID, htmlAttributes: new { @class = "required" })
                </div>

                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                    @Html.DropDownListFor(model => model.selectYearID, new SelectList(Model.yearList, "Value", "Text"), "Select", new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.selectYearID, null, new { @class = "text-danger" })
                </div>

                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                    @Html.LabelFor(model => model.designationID, htmlAttributes: new { @class = "" })
                </div>

                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                    @Html.DropDownListFor(model => model.designationID, new SelectList(Model.designationList, "id", "value"), "Select", new { @class = "custom-select" })
                </div>

                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                    @Html.LabelFor(model => model.monthID, htmlAttributes: new { @class = "" })
                </div>

                <div class="col-lg-2 col-md-2 col-sm-3 col-xs-6 mb-2">
                    @Html.DropDownListFor(model => model.monthID, (IEnumerable<SelectListItem>)ViewBag.StaffMonth, new { @class = "custom-select" })
                    @Html.ValidationMessage("monthRequired", null, new { @class = "text-danger" })
                </div>

                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.periodWise, htmlAttributes: new { @class = "" })
                </div>
                <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">

                    @Html.CheckBoxFor(model => model.periodWise, new { @class = "" })
                </div>


            </div>
        </div>
    </div>

    <hr style="background-color:#fff !important;">
    <div class="row mt-3">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
            <button type="submit" id="submitform" value="View Report" title="Click here, to search records" class="btn btn-warning toggle-tooltip" formtarget="_blank">
                <i class="fa fa-eye"></i> View Report
            </button>
        </div>

    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#periodWise').change(function () {
            var isChecked = $(this).is(':checked');
            if (isChecked) {
                $("#monthID").removeAttr("disabled");
                $("#designationID").attr("disabled", "disabled");
            }
            else {
                //$("#monthID").attr("disabled", "disabled");
                $("#designationID").removeAttr("disabled");
            }
        });
    });
</script>