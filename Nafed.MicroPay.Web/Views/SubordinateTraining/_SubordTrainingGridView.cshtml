@using Nafed.MicroPay.Model;
@model List<FormTrainingDtls>

<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100 mt-2">
    <thead>

        <tr>
            <th style="width:7%">
                Reporting Yr
            </th>
            <th style="width:20%">
                Name
            </th>
            <th style="width:15%">
                Branch
            </th>
            <th style="width:15%">
                Designation
            </th>
            <th style="width:10%">
                Training
            </th>
            <th>
                Comments
            </th>
        </tr>

    </thead>

    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>@item.ReportingYr</td>
                    <td>@item.Name</td>
                    <td> @item.BranchName</td>
                    <td> @item.DesignationName</td>             
                    <td>@item.FormTraining</td>
                    <td> @item.Remark</td>                    
                </tr>

            }
        }
    </tbody>

</table>