@using MicroPay.Web.Models
@model Form12BBFilterVM

<div class="advance-search" style="">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">
        <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
            @Html.Label("Search")
        </h4>
    </div>
     
    <hr style="background-color:#fff !important;">

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary pr-0">
                <i class="fas fa-filter"></i> Filter By :
            </div>
            <div class="col-md-2">

                <div class="form-group">
                    @Html.Label("Financial Yr", htmlAttributes: new { @class = "" })

                    @Html.DropDownListFor(model => model.selectedFYear, new SelectList(Model.fYears, "Text", "Value"), "Select", new { @class = "custom-select", @id = "ddl_fYear_1" })
                </div>

            </div>

            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 pt-lg-4">
                @Html.ActionLink("Fill Form12BB", "_EditForm12BB", "TaxDeduction", null, new {  @id= "lnkFillForm", @class = "btn btn-info", title = "Click here, to fill form 12BB.", @data_toggle = "tooltip" })
                
                <button type="submit" id="submitform" class="btn btn-warning" data-toggle="tooltip" title="Click here, to search records.">
                    <i class="fa fa-search"></i> Search
                </button>              
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        $("#ddl_fYear_1").change(function () {
            var selectedVal = $("#ddl_fYear_1 option:selected").val();
            if (selectedVal != "") {
                var parameters = ($("#lnkFillForm").attr('href')).split("&");
                var newHREF = parameters[0] + "?fYear=" + selectedVal;
                $("#lnkFillForm").attr('href', "").attr("href", newHREF);
            }
        });
    });

</script>