@model List<Nafed.MicroPay.Model.Test>
@{
    ViewBag.Title = "View";
    Layout = null;
}
@using (Html.BeginForm("GetDetail", "Test",FormMethod.Get))
{
<table>
    <tr>
        <th>
            ID
        </th>
        <th>Name</th>
        <th>Select</th>
    </tr>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(model=> Model[i].VM_ID)
                    @Model[i].VM_ID
                  
                </td>
                <td>
                    @Model[i].name
                  
                </td>
                <td>
                    @Html.CheckBoxFor(model => Model[i].IsChecked)
                </td>
            </tr>
        }
    </tbody>
</table>
    <div>
        <input  type="submit" value="Next" />
    </div>
}