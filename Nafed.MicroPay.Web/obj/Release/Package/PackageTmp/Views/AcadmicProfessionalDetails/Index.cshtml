@model Nafed.MicroPay.Model.UserAccessRight
@{
    ViewBag.Title = "Academic & Professional Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //System.Globalization.CultureInfo Indian = new System.Globalization.CultureInfo("hi-IN");
}

@using (Ajax.BeginForm("AcadmicProfessionalGridView", "AcadmicProfessionalDetails", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "UserGridDiv" }))
{
    <div class="advance-search" style="">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

            <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
                @Html.Label("Search")
            </h4>
            
        </div>
        <hr style="background-color:#fff !important;">

       

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 text-secondary">

                        <i class="fas fa-filter"></i> Filter By :

                    </div>
                    @*<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        </div>*@
                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                        @Html.Label("Type", htmlAttributes: new { @class = "" })
                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                        @Html.DropDownList("ddlAcadmicType", (IEnumerable<SelectListItem>)ViewBag.selectType, new { @class = "custom-select" })
                    </div>
                    
                </div>
            </div>
        </div>

        <hr style="background-color:#fff !important;">
        <div class="row mt-3">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                @if (Model.Create)
                {
                    @Html.ActionLink("Create New", "Create", "AcadmicProfessionalDetails", null, new { @class = "btn btn-info btn-md", title = "Click here, to create new record", @data_toggle = "tooltip" })
                }
                <button type="submit" id="submitform" class="btn btn-warning toggle-tooltip" title="Click here, to search records.">
                    <i class="fa fa-search"></i> Search
                </button>


                @*<input type="submit" value="&#xf002 Search" id="btnSearch" class="btn btn-warning pull-right faelement"  onclick="GetEmployeeAttendanceGridData();">*@
            </div>

        </div>
    </div>
}


