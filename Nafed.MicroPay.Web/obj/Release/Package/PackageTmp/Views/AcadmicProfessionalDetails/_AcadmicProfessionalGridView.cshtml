@model MicroPay.Web.Models.AcadmicProfessionalModel

<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Type
            </th>
            <th>
                Value
            </th>
            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.AcadmicProfessionalList.Count > 0)
            {
                var sno = 1;
                foreach (var item in Model.AcadmicProfessionalList)
                {
                    <tr>
                        <td> @sno</td>
                        <td> @item.Type</td>
                        <td> @item.Value</td>
                        @if (Model.userRights.Edit)
                        {
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "AcadmicProfessionalDetails", new { acadmicProfessionalDetailsID = @item.ID })" title="Click here, to edit this record">
                                    <span class="far fa-edit text-info" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "AcadmicProfessionalDetails", new { acadmicProfessionalDetailsID = @item.ID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        }
                        @if (Model.userRights.Delete)
                        {
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete", "AcadmicProfessionalDetails", new { acadmicProfessionalDetailsID = @item.ID })" title="Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "AcadmicProfessionalDetails", new { acadmicProfessionalDetailsID = @item.ID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                    </tr>
                    sno++;
                }
            }

        }

    </tbody>
</table>
