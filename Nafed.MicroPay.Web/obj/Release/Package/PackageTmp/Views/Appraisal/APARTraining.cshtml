@using Nafed.MicroPay.Model;
@model CommonFilter
@{
    ViewBag.Title = "Training Need";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-2">
    <div class="tab" role="tabpanel">
        <nav class="navbar navbar-expand-md  navbar-dark px-0">

            <!-- Brand -->
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler bg-info" type="button" data-toggle="collapse" data-target="#collapsible_tab">
                <span class="fa fa-bars"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsible_tab" style="position: relative;z-index: 999;">
                <ul class="nav nav-tabs" role="tablist" id="tabs">

                    <li class="nav-item">
                        <a class="nav-link active toggle-tooltip" role="tab" data-toggle="tab" title="Training Need From APAR" href="#Tab1">Training Need From APAR</a>
                    </li>                   

                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip" role="tab" data-toggle="tab"  title="Training From GM And Above Requested" href="#Tab2">Training From GM And Above Requested</a>
                    </li>
                  
                </ul>
            </div>
        </nav>

        <!-- Tab panes -->
        <div class="tab-content">
            <div id="Tab1" class="container tab-pane active fullwidth-container">
                <div id="div-filter">
                    @Html.Partial("_APARTrainingFilters", Model)
                </div>
                <div id="div-APARTraining-List">
                </div>
            </div>

            <div id="Tab2" class="container tab-pane fade fullwidth-container">
                <div id="div-filter">
                    @Html.Action("SubTrainingsFilter", "SubordinateTraining")
                </div>
                <div id="div-SubordTraining-List">
                    @Html.Action("GetSubordTrnList", "SubordinateTraining")
                </div>
            </div>

        </div>
    </div>
</div>
