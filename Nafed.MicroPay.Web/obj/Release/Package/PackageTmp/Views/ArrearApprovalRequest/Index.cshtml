
@{
    ViewBag.Title = "Arrear Approval Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <div class="tab" role="tabpanel">
        <nav class="navbar navbar-expand-md  navbar-dark px-0">
            <!-- Brand -->
            <a class="navbar-brand d-xl-none d-md-none" href="#"> Menu</a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler bg-info" type="button" data-toggle="collapse" data-target="#collapsible_tab">
                <span class="fa fa-bars"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsible_tab" style="position: relative;z-index: 999;">
                <ul class="nav nav-tabs" role="tablist" id="tabs">

                    <li class="nav-item" role="presentation">
                       
                         <a class="nav-link toggle-tooltip active" data-toggle="tab" role="tab" title="DA Arrear" href="#DAArrearRequest">
                            DA Arrear
                        </a>
                    </li>

                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" role="tab" title="Pay Arrear" href="#PayArrearRequest">
                           Pay Arrear
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Tab panes -->
        <div class="tab-content">

            <div id="DAArrearRequest" class="container tab-pane active fullwidth-container">
                
                <div id="div-DAArrer-form">

                    @Html.Action("_DAArrearForm", "ArrearApprovalRequest")

                </div>
            </div>
            <div id="PayArrearRequest" class="container tab-pane fade fullwidth-container">

                <div id="div-PayArrer-form">

                    @Html.Action("_PayArrearForm", "ArrearApprovalRequest")

                </div>
            </div>
        </div>
    </div>
</div>

