@using MicroPay.Web.Models
@model CandidateDetailsViewModel
@{
    ViewBag.Title = "Candidate - Issue Written Exam Admit Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    @using (Ajax.BeginForm("_GetCandidateSearchDetailsGridView", "CandidateSearchDetails", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "CandidateSearchGridDiv" }, new { defaultbutton = "submitform" }))
    {
        <div class="advance-search" style="">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">
                <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
                    @Html.Label("Search")
                </h4>
            </div>
            <hr style="background-color:#fff !important;">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="form-group">

                    <div class="row mb-2">
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary mb-3">
                            <i class="fas fa-filter"></i> Filter By :
                        </div>
                        </div>
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.Label("Designation:", htmlAttributes: new { @class = "Control-label " })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.DropDownListFor(model => model.DesignationID, new SelectList(Model.DesignationList, "id", "value"), "Select", new { @class = "custom-select" })
                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                            @Html.Label("Publish From :", htmlAttributes: new { @class = "Control-label " })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.EditorFor(model => model.PublishDateFrom, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </div>


                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                            @Html.Label("To :", htmlAttributes: new { @class = "Control-label " })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.EditorFor(model => model.PublishDateTo, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.Label("Admit Card Generated:", htmlAttributes: new { @class = "Control-label " })
                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                            @Html.DropDownListFor(model => model.IssueAdmitCard, (IEnumerable<SelectListItem>)ViewBag.selectedCandidate, new { @class = "custom-select" })

                        </div>

                        @*<div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">

                <input type="submit" id="submitform" value="Search" title="Click here, to search records" class="btn btn-warning toggle-tooltip">


            </div>*@

                    </div>
                    <hr style="background-color:#fff !important;">
                    <div class="row mt-3">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">

                            <button type="submit" id="submitform" class="btn btn-warning toggle-tooltip mt-2" title="Click here, to search records.">
                                <i class="fa fa-search"></i> Search 
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="card_new_body">
            <div id="CandidateSearchGridDiv">
                @*@Html.Action("_GetCandidateSearchDetailsGridView")*@
            </div>
        </div>
    }
</div>
