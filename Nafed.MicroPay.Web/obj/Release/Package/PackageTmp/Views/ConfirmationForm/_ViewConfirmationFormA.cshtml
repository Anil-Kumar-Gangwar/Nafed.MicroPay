        (Model.ApprovalHierarchy == 2) ? null : "";
    var reviewingtextarea = reviewingSectionClass == "" ? true : false;

    if (Model.confirmationFormRulesAttributes != null && Model.confirmationFormRulesAttributes.ReportingSection) { reportingSectionClass = null; }
