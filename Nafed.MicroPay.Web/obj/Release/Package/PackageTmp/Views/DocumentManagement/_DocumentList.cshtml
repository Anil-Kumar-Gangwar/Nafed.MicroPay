@model MicroPay.Web.Models.DashboardDocumentsVM
<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Document Type
            </th>
            <th>
                Document Name
            </th>
            <th>
                Document Description
            </th>
           
            <th class="text-center" style="width:40px">
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
    @{
        if (Model.dbList != null && Model.dbList.Count > 0)
        {
            var sno = 1;
            for (int i = 0; i < Model.dbList.Count; i++)
            {
                <tr>
                    <td> @sno</td>
                    <td> @Model.dbList[i].DocumentTypeName</td>
                    <td>
                        @Html.HiddenFor(model => Model.dbList[i].DocID)                      
                        @Model.dbList[i].DocumentName
                    </td>
                    <td>
                        @Model.dbList[i].DocumentDesc
                    </td>              
                                        
                    <td class="text-center">
                        @*<a data-toggle="confirm" class="toggle-tooltip"  href="@Url.Action("DeleteDocument", "DocumentManagement", new { documentID = Model.dbList[i].DocID, fileName = Model.dbList[i].DocumentPathName })" title="Click here, to delete this record">
                            <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                        </a>*@
                        @Html.EncodedImageActionLink("", "DeleteDocument", "DocumentManagement", new { documentID = Model.dbList[i].DocID, fileName = Model.dbList[i].DocumentPathName }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                    </td> 
                </tr>
                sno++;
            }
        }
        else
        {
         <tr><td colspan="5" class="text-center"> No Record Found.</td>
        </tr>  
        }
    }
    </tbody>
</table>


<script type="text/javascript">
    $('.toggle-tooltip').tooltip();
</script>









