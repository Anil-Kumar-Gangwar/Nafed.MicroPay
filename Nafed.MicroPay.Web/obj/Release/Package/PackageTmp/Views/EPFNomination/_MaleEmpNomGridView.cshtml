@using fileHelper = Nafed.MicroPay.Common.ExtensionMethods;
@using Nafed.MicroPay.Model;
@model Nafed.MicroPay.Model.EPFNomination


<script type="text/javascript">

    $('.toggle-tooltip').tooltip();

</script>

<table id="tblMaleNom" class="table table-bordered border-dark table-centered dt-responsive w-100">
    <thead>
        <tr>
           
            <th class="text-center" style="width:40%">Name and Address of the Nominee </th>  
            <th class="text-center" style="width:10%">Date of Birth </th>
            <th class="text-center" style="width:20%">Relationship with the member </th>
        </tr>      
    </thead>
    <tbody>

        @if (Model.EPSMaleEmpNomList != null && Model.EPSMaleEmpNomList.Count() > 0)
        {
            for (int i = 0; i < Model.EPSMaleEmpNomList.Count(); i++)
            {
                <tr>
                    <td>
                        @Model.EPSMaleEmpNomList[i].DependentName <br />
                        @Model.EPSMaleEmpNomList[i].Address 
                    </td>
                    <td class="text-center">
                        @(Model.EPSMaleEmpNomList[i].DOB.HasValue ? Convert.ToDateTime(Model.EPSMaleEmpNomList[i].DOB).ToString("dd/MM/yyyy") : "Not Available")
                    </td>
                    <td>
                        @Model.EPSMaleEmpNomList[i].RelationName
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No Record Found. </td>
            </tr>
        }
    </tbody>
</table>
@*///}*@
<script type="text/javascript">
    $(document).ready(function () {
        var table = $('#tblMaleNom').DataTable({
            searching: false, paging: false, sorting: false,

            "ordering": false,
            "info": false
        });
    });
</script>



