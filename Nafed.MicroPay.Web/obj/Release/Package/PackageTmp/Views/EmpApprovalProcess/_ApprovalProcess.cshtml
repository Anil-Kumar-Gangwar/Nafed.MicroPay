@using Nafed.MicroPay.Model;
@model EmployeeProcessApprovalVM

   
            <table id="tblApproval" class="table table-bordered table-centered dt-responsive w-100">
                <thead>
                    <tr>                       
                        <th class="text-center" style="width:20%">Reporting To </th>
                        <th class="text-center" style="width:20%">Reviewer To </th>
                        <th class="text-center" style="width:20%">Reporting 3 </th>
                    </tr>
                </thead>
                <tbody>                                    
                        <tr>                            
                            <td>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @Html.HiddenFor(model => model.empProcess.ProcessID)
                                        @Html.HiddenFor(model => model.empProcess.EmployeeID)
                                        @Html.HiddenFor(model => model.empProcess.RoleID)
                                        @Html.DropDownListFor(model => Model.empProcess.ReportingTo, new SelectList(Model.EmployeeList, "id", "value", Model.empProcess.ReportingTo), new { @class = "custom-select"})                                       
                                        @Html.ValidationMessage("ReportingBlankModel", "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @Html.DropDownListFor(model => Model.empProcess.ReviewingTo, new SelectList(Model.EmployeeList, "id", "value", Model.empProcess.ReviewingTo), new { @class = "custom-select" })
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @Html.DropDownListFor(model => Model.empProcess.AcceptanceAuthority, new SelectList(Model.EmployeeList, "id", "value", Model.empProcess.AcceptanceAuthority), new { @class = "custom-select" })
                                    </div>
                                </div>
                            </td>
                        </tr>                    
                </tbody>
            </table>       
       
            <div class="form-group">               
                <span class="pull-right">                   
                    <input type="submit" value="Add" name="ButtonType" class="btn btn-info btn-md pull-center toggle-tooltip" title="Click here, to add new record" />
                </span>
            </div>
       

<script>
    function onBeginPopup() {
        debugger;
        $("#ReportingblankError").html('');
        if ($('#empProcess_ReportingTo').val() == 0) {
            $("#ReportingblankError").html("Please select Reporting 1").css("color", "red");
            return false;
        } else {
            $("#formProcess").submit();
        }
    }
</script>