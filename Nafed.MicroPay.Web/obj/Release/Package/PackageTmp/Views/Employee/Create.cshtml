
@{
    ViewBag.Title = "Employee Master";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@*<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>*@
<div class="mt-2">
    <div class="tab" role="tabpanel">

        <nav class="navbar navbar-expand-md  navbar-dark px-0">

            <!-- Brand -->
         

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler bg-info" type="button" data-toggle="collapse" data-target="#collapsible_tab">
                <span class="fa fa-bars"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsible_tab" style="position: relative;z-index: 999;">
                <ul class="nav nav-tabs" role="tablist" id="tabs">

                    <li class="nav-item">
                        <a class="nav-link active toggle-tooltip" title="General" role="tab" data-toggle="tab" href="#general">General</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Personal" href="#Personal">Personal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Others" href="#Others">Others</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Professional" href="#Professional">Professional</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Promotion & Increments" href="#PromotionAndIncrement">Promotion & Increments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Pay Scale" href="#PayScale">Pay Scale</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip " @*data-toggle="tab"*@ role="tab" data-toggle="tooltip" title="Deputation" href="#Deputation">Deputation</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" data_toggle="Employee Achievement"
                           title="Employee Acheivement" href="#EmpAcheivement">
                            Employee Achievement
                        </a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" data_toggle="Employee Achievement"
                           title="Employee Certification" href="#EmpCertification">
                            Employee Certification
                        </a>

                    </li>
                </ul>
            </div>
        </nav>
        <!-- Tab panes -->
        <div class="tab-content">
            <div id="general" class="container tab-pane active fullwidth-container">

                @Html.Action("CreateGeneralDetails", "Employee")
            </div>
            <div id="Personal" class="container tab-pane fade fullwidth-container">

                @Html.Action("_EditPersonalDetails", "Employee")
            </div>
            <div id="Others" class="container tab-pane fade fullwidth-container">

                @Html.Action("_EditOtherDetails", "Employee")
            </div>
            <div id="Professional" class="container tab-pane fade fullwidth-container">

                @Html.Action("_EditProfessionalDetails", "Employee")

            </div>
            <div id="PromotionAndIncrement" class="container tab-pane fade fullwidth-container">

                @Html.Action("_EditPromotionAndIncrementDtls", "Employee")

            </div>
            <div id="PayScale" class="container tab-pane fade fullwidth-container">

                @Html.Action("_EditPayScaleDetails", "Employee")

            </div>
            <div id="Deputation" class="container tab-pane fade fullwidth-container">

                @*@Html.Action("_EditPayScaleDetails", "Employee")*@

            </div>
        </div>
    </div>
    </div>


