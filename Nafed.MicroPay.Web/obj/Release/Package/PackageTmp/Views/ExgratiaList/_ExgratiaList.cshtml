@model MicroPay.Web.Models.ExgratiaViewModel


<div class="advance-search" style="">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">
        <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">
            @Html.Label("Search")
        </h4>
    </div>

    <hr style="background-color:#fff !important;">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-group">
            <div class="row mb-2">
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 text-secondary pr-0">
                    <i class="fas fa-filter"></i> Filter By :
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                    @Html.Label("Please select the Financial Year for which you want to list exgratia", htmlAttributes: new { @class = "" })
                </div>
                <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                    @Html.DropDownListFor(model => model.selectYearID, new SelectList(Model.yearList, "Text", "Value"), "Select", new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.selectYearID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <hr style="background-color:#fff !important;">
    <div class="row mt-3">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
            <button type="submit" id="submitform" value="View Report" title="Click here, to generate exgratia list" name="eventType" class="btn btn-warning toggle-tooltip" formtarget="_blank">
                <i class="fa fa-eye"></i> Generate List
            </button>
        </div>
    </div>
</div>





    


