@model List<Nafed.MicroPay.Model.FTSUser>

<table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>          
            <th>
                User Name
            </th>           
            <th class="text-center" style="width:60px">
                Change Password
            </th> 
            <th class="text-center" style="width:60px">
                Map Department
            </th>               
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null && Model.Count > 0)
            {
                var sno = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @sno
                        </td>                       
                        <td> @item.UserName</td>                      
                        <td class="text-center">
                            @*<a href="@Url.Action("Edit","FTSUser",new { userID = item.UserId })" title="Click here, to edit this record" data-toggle="tooltip">
                                <span class="far fa-edit text-info" aria-hidden="true"></span>
                            </a>*@
                           
                            @Html.EncodedImageActionLink("", "Edit", "FTSUser", new { userId = item.UserId, userName = item.UserName }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")                            
                        </td>  
                        <td class="text-center">
                            @*<a href="@Url.Action("MapDepartment","FTSUser",new { userID = item.UserId,userName=item.UserName })" title="Click here, to map department for this user" data-toggle="tooltip">
                                <span class="fas fa-cogs text-info" aria-hidden="true"></span>
                            </a>*@
                            @Html.EncodedImageActionLink("", "MapDepartment", "FTSUser", new { userID = item.UserId, userName = item.UserName }, new { @class = "toggle-tooltip", title = "Click here, to map department for this user" }, "~/Images/fa-cogs.png")
                        </td>
                     
                    </tr>
                    sno++;
                }

            }

        }

    </tbody>
</table>
