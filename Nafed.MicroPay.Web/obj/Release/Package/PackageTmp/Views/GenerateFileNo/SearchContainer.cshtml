
@using Nafed.MicroPay.Model
@model FileManagement
@{
    ViewBag.Title = "File Tracking System";
    ViewBag.NavigationTitle = "File Tracking";
    Layout = "~/Views/Shared/_Layout.cshtml";
    System.Globalization.CultureInfo Indian = new System.Globalization.CultureInfo("hi-IN");
}

<div>

    @using (Ajax.BeginForm("_GetFilesGridView", "GenerateFileNo", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "FileGridDiv" }, new { defaultbutton = "submitform" }))
    {
        <div class="advance-search" style="">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

                <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">

                    @Html.Label("Search")
                </h4>

            </div>

            <hr style="background-color:#fff !important;">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary">
                            <i class="fas fa-filter"></i> Filter By :
                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.DiaryNo, htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 choices__inner">

                          @Html.EditorFor(model => model.DiaryNo, new { htmlAttributes = new { @class = "form-control custom-input", autocomplete = "off", @placeholder = "File No.", @maxlength = "100" } })

                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
                            @Html.Label("From Date", htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                            @Html.TextBoxFor(model => model.FilePutup, String.Format("{0:dd/MM/yyyy}", Model.FilePutup), new { @type = "text", @class = "form-control datepicker custom-input", @id = "filePutup", autocomplete = "off", @placeholder = "dd/mm/yyyy" })
                           

                        </div>

                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 ">
                            @Html.Label("To Date", htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.TextBoxFor(model => model.SendDate, String.Format("{0:dd/MM/yyyy}", Model.SendDate), new { @type = "text", @class = "form-control datepicker custom-input", @id = "sendDate", autocomplete = "off", @placeholder = "dd/mm/yyyy" })
                                                        
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 mt-sm-2">
                            <button type="submit" id="submitform" class="btn btn-warning" title="Click here, to search records.">
                                <i class="fa fa-search"></i> Search
                            </button>
                        </div>

                        

                    </div>
                </div>
            </div>          
        </div>
    }
        <div class="card_new_body">
            <div id="FileGridDiv">
              
            </div>
        </div>
    
</div>








