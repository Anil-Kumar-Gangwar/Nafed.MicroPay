@model IEnumerable<Nafed.MicroPay.Model.Holiday>

    <table id="tblGrid" class="table table-centered table-striped dt-responsive w-100">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Calendar Year
                </th>

                <th>
                    Holiday Name
                </th>
                <th>
                    Holiday Date
                </th>
                <th>
                    Branch
                </th> 
                <th class="text-center" style="width:60px">
                    Edit
                </th>
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null && Model.Count() > 0)
                {
                    var sno = 1;
                    foreach (var item in Model)
                    {
                        var bName = item.BranchName != null ? item.BranchName : "All";

                        <tr>
                            <td> @sno</td>
                            <td> @item.CYear</td>
                            <td> @item.HolidayName</td>
                            <td>@Convert.ToDateTime(item.HolidayDate).ToString("dd-MM-yyyy") </td>

                            <td> @bName  </td>
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit","Holiday",new { holidayID = item.HolidayID })" title = "Click here, to edit this record" data-toggle = "tooltip">
                                    <i class="far fa-edit text-info" aria-hidden="true"></i>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "Holiday", new { holidayID = item.HolidayID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                            <td class="text-center">
                                @*<a data-toggle="confirm" class="toggle-tooltip" href="@Url.Action("Delete","Holiday",new { holidayID = item.HolidayID })" title = "Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "Holiday", new { holidayID = item.HolidayID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        </tr>
                        sno++;
                    }
                }

            }

        </tbody>
    </table>













