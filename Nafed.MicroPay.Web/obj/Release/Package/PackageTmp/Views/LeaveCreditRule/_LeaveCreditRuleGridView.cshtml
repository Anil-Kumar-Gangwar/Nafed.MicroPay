@model MicroPay.Web.Models.LeaveCreditRuleViewModel

<table id="tblUser" class="table table-centered table-striped dt-responsive w-100">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Calendar Year
            </th>
            <th>
                Leave Category
            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Credit
            </th>
            @if (Model.userRights.Edit)
            {
                <th class="text-center" style="width:60px">
                    Edit
                </th>
            }
            @if (Model.userRights.Delete)
            {
                <th class="text-center" style="width:60px">
                    Delete
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
            if (Model != null && Model.leaveCreditRuleList.Count > 0)
            {
                foreach (var item in Model.leaveCreditRuleList)
                {
                    <tr>
                        <td> @index</td>
                        <td> @item.FinancialYear</td>
                        <td> @item.LeaveCategory</td>
                        <td> @item.FMonth</td>
                        <td> @item.TMonth</td>
                        <td> @item.Credit</td>
                        @if (Model.userRights.Edit)
                        {
                            <td class="text-center">
                                @*<a href="@Url.Action("Edit", "LeaveCreditRule", new { leaveCreditRuleID = @item.CreditRuleID })" title="Click here, to edit this record" data-toggle="tooltip">
                                    <span class="far fa-edit text-info" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Edit", "LeaveCreditRule", new { leaveCreditRuleID = @item.CreditRuleID }, new { @class = "toggle-tooltip", title = "Click here, to edit this record" }, "~/Images/edit.png")
                            </td>
                        }
                        @if (Model.userRights.Delete)
                        {
                            <td class="text-center">
                                @*<a class="toggle-tooltip" data-toggle="confirm" href="@Url.Action("Delete", "LeaveCreditRule", new { leaveCreditRuleID = @item.CreditRuleID })" title="Click here, to delete this record">
                                    <span class="far fa-trash-alt text-danger" aria-hidden="true"></span>
                                </a>*@
                                @Html.EncodedImageActionLink("", "Delete", "LeaveCreditRule", new { leaveCreditRuleID = @item.CreditRuleID }, new { @class = "toggle-tooltip", title = "Click here, to delete this record" }, "~/Images/delete.png", true)
                            </td>
                        }
                    </tr>
                    index++;
                }
            }

        }

    </tbody>
</table>

