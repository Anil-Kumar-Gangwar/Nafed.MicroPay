
@{
    ViewBag.Title = "Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">
    <div class="tab" role="tabpanel">
        <nav class="navbar navbar-expand-md  navbar-dark px-0">
            <!-- Brand -->
            <a class="navbar-brand d-xl-none d-md-none" href="#">Approval Menu</a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler bg-info" type="button" data-toggle="collapse" data-target="#collapsible_tab">
                <span class="fa fa-bars"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsible_tab" style="position: relative;z-index: 999;">
                <ul class="nav nav-tabs" role="tablist" id="tabs">

                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip active" data-toggle="tab" role="tab" title="Publish Salary" href="#PublishSalary">
                            Publish Salary
                        </a>
                    </li>

                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" role="tab" title="Publish DA Arrear" href="#PublishDAArrear">
                            Publish DA Arrear
                        </a>
                    </li>

                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" role="tab" title="Publish Pay Arrear" href="#PublishPayArrear">
                            Publish Pay Arrear
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Tab panes -->
        <div class="tab-content">

            <div id="PublishSalary" class="container tab-pane active fullwidth-container">
                <div id="div-sal-form">
                    @Html.Action("_SalaryApprovalRequest", "PublishSalary")
                </div>
            </div>

            <div id="PublishDAArrear" class="container tab-pane fade fullwidth-container">
                 <div id="div-PublishDAArrer-form">
                   
                     @*@Html.Action("_PublishDAArrerForm", "PublishSalary")*@

                    @Html.Action("_DAArrearApprovalRequest", "PublishSalary")

                </div>
            </div>
            <div id="PublishPayArrear" class="container tab-pane fade fullwidth-container">

                <div id="div-PublishPayArrer-form">
                    @Html.Action("_PayArrearApprovalRequest", "PublishSalary")
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="div-payroll-approval-popup">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title required">Remark</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="div-approvalPopup">


            </div>

            <!-- Modal footer -->
            <div class="modal-footer">

            </div>

        </div>
    </div>
</div>


