@using MicroPay.Web.Models
@model SalaryHeadViewModel

@{
    ViewBag.Title = "Salary Head Slab ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("_GetSalHeadSlabConfigGridView", "SalaryHeadSlabConfig", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divSalaryHead" }, new { defaultbutton = "submitform" }))
{

    <div class="row patty_panel" style="background-color: #0c858e; box-shadow: 0px 1px 2px;padding-top: 0px;">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2">

            <h4>
                @Html.Label("SEARCH FILTERS")
            </h4>
        </div>

        <hr style="background-color:#fff !important;">

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                        @Html.Label("Salary Head", htmlAttributes: new { @class = "" })
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

                         @Html.DropDownListFor(model => model.FieldName, new SelectList(Model.fieldList, "FieldName", "FieldDesc"), "Select", new { @class = "custom-select" })
                        @Html.ValidationMessage("FieldNameRequired", "", new { @class = "text-danger" })
                       
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <input type="submit" id="submitform" value="Search" title="Click here, to search records" class="btn btn-warning toggle-tooltip" >

                    </div>

                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card_new_header text-right">

        @if (Model.userRights.Create)
        {
        @*@Html.ActionLink("Create New", "_GetSalaryHeadSlabConfigDtls", "SalaryHeadSlabConfig", null, new { @class = "btn btn-info btn-sm", title = "Click here, to create new record", @data_toggle = "tooltip" })*@
        <a data-ajax="true" class="btn btn-info btn-md toggle-tooltip"
           style="text-decoration:none;text-align:center;"
           href="@Url.Action("_GetSalaryHeadSlabConfigDtls", "SalaryHeadSlabConfig")"
           id="lnkLocFormulaEditor"
           method="GET" title="Click here, to create new record"
           data-ajax-update="#div-salHead" data-ajax-mode="replace"
           data-backdrop="static" data-keyboard="false"
           data-toggle="modal" data-target="#SalaryHeadSlabModal">
            Create New
        </a>
        }
    </div>

    <div class="card_new_body">
        <div id="divSalaryHead">
            
            @Html.Action("_GetSalHeadSlabConfigGridView", "SalaryHeadSlabConfig")  

        </div>
    </div>

 }
<div class="modal" id="SalaryHeadSlabModal">
    <div class="modal-dialog modal-large">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add/Edit Slab</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="div-salHead">

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">

            </div>

        </div>
    </div>
</div>