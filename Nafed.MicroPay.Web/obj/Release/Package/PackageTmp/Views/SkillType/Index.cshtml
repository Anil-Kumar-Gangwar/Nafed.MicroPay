@model MicroPay.Web.Models.SkillTypeViewModel
@{
    ViewBag.Title = "Skill Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("SkillTypeGridView", "SkillType", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "SkillTypeGridDiv" }))
{
    <div class="advance-search" style="">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

            <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">

               @Html.Label("Search")
            </h4>
            
        </div>
        <hr style="background-color:#fff !important;">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary mt-2">

                        <i class="fas fa-filter"></i> Filter By :

                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 mt-2">
                        @Html.LabelFor(model => model.isDeleted, htmlAttributes: new { @class = "" })
                    </div>

                    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 pr-0">

                        <label class="switch">

                            @Html.CheckBoxFor(model => model.isDeleted, new { @class = "" })
                            <div class="slider round">

                            </div>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <hr style="background-color:#fff !important;">
        <div class="row mt-3">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                @if (Model.userRights.Create)
                {
                    @Html.ActionLink("Create New", "Create", "SkillType", null, new { @class = "btn btn-info btn-md", title = "Click here, to create new record", @data_toggle = "tooltip" })
                }
                <button type="submit" id="submitform" class="btn btn-warning toggle-tooltip" name="eventType" title="Click here, to search records.">
                    <i class="fa fa-search"></i> Search
                </button>


                @*<input type="submit" value="&#xf002 Search" id="btnSearch" class="btn btn-warning pull-right faelement"  onclick="GetEmployeeAttendanceGridData();">*@
            </div>

        </div>


    </div>
}

<div class="">
    <div class="card_new_header text-right">
        @if (Model.userRights.Create)
        {
            @Html.ActionLink("Create New", "Create", "SkillType", null, new { @class = "btn btn-info btn-md", title = "Click here, to create new record", @data_toggle = "tooltip" })
        }
    </div>
    <div class="card_new_body">
        <div id="SkillTypeGridDiv">
            @Html.Action("SkillTypeGridView")
        </div>
    </div>
</div>

