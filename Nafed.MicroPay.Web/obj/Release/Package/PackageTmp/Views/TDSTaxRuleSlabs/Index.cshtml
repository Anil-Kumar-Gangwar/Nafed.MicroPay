@using Nafed.MicroPay.Model
@using MicroPay.Web.Models
@model TDSTaxRuleSlabsVM
@{
    ViewBag.Title = "TDS Tax Rule Slabs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Ajax.BeginForm("_GetTaxRuleSlabs", "TDSTaxRuleSlabs", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "div-tax-rule-slabs" }, new { defaultbutton = "submitform" }))
    {
        <div class="advance-search" style="">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pb-1 pt-2 form-inline align-middle">

                <i class="fa fa-search fa-2x" style="color:#d4d4d4;" aria-hidden="true"></i><h4 class="desc" style="color:#0bb70b;">

                    @Html.Label("Search")
                </h4>

            </div>

            <hr style="background-color:#fff !important;">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <div class="form-group">

                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 text-secondary">

                            <i class="fas fa-filter"></i> Filter By :

                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 ">
                            @Html.LabelFor(model => model.selectedFyear, htmlAttributes: new { @class = "" })
                        </div>

                        <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 choices__inner">

                            @Html.DropDownListFor(model => model.selectedFyear, new SelectList(Model.fYList, "value", "value"), "Select", new { @class = "selectpicker custom-select" })

                        </div>

                    </div>

                </div>
            </div>
            <hr style="background-color:#fff !important;">
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">

                    @if (Model.userRights != null && Model.userRights.Create)
                    {
                        @Html.ActionLink("Add New Tax Rule Slabs", "GetTaxRuleSlabForm", "TDSTaxRuleSlabs", null, new { @class = "btn btn-info", @style = "", title = "Click here, to add new tax rule slabs.", @data_toggle = "tooltip" })
                    }
                    <button type="submit" id="submitform" data-toggle="tooltip" class="btn btn-warning" title="Click here, to search records.">
                        <i class="fa fa-search"></i> Search
                    </button>

                </div>
            </div>

        </div>


        <div class="text-right">

        </div>
        <div class="card_new_body">
            <div id="div-tax-rule-slabs">

            </div>
        </div>
    }
</div>

