@using Nafed.MicroPay.Model
@using Nafed.MicroPay.Common;
@{
    var cMonth = DateTime.Now.Month;
    var cYear = DateTime.Now.Year;
    var fYear = Convert.ToInt32(Model.FYear.Split('-')[1]);
    bool btnShow = false;
    if (fYear > cYear || (fYear == cYear && cMonth < 4))
    {
        btnShow = true;
    }
}

@model Form12BBInfo

@Html.HiddenFor(model => model.FYear)

@Html.HiddenFor(model => model.EmpFormID)
@Html.HiddenFor(model => model.CreatedBy)

@Html.HiddenFor(model => model.CreatedOn)
@Html.HiddenFor(model => model.EmployeeID)

@Html.HiddenFor(model => model.FormState)

@Html.HiddenFor(model => model.EmployeeCode)

@Html.HiddenFor(model => model.PANNo)
@Html.HiddenFor(model => model.FullName)

@Html.HiddenFor(model => model.FatherName)
@Html.HiddenFor(model => model.Designation)

<div>

    <div class="row">

        <div class="col-lg-9 col-md-9 col-xl-9 col-sm-12 col-xs-12">

        </div>

        <div class="col-lg-3 col-md-3 col-xl-3 col-sm-12 col-xs-12 font-weight-bold">

            FORM NO. 12BB

        </div>
    </div>

    <div class="row">

        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-xs-12 text-center font-weight-bold">

            (See rule 26C)
        </div>
    </div>

    <div class="form-group">

        <div class="row">

            <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-xs-12 text-center mt-10 font-weight-bold">

                Statement showing particulars of claims by an employee for deduction of tax under
                section 192
            </div>

        </div>
    </div>

    <div class="form-group">

        <div class="row mt-10">

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">

                1. Name and address of the employee:
            </div>

            <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12">
                <p>

                    @Model.FullName <br />

                    @if (!string.IsNullOrEmpty(Model.EmployeeAddress))
                    {
                        @Model.EmployeeAddress
                    }
                    else
                    {
                        <text>Not Available</text>
                    }


                </p>

            </div>
        </div>
    </div>

    <div class="form-group">

        <div class="row mt-10">

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">

                2. Permanent Account Number of the employee:
            </div>

            <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12">

                @if (!string.IsNullOrEmpty(Model.PANNo))
                {
                    @Model.PANNo
                }
                else
                {
                    <text>Not Available</text>
                }

            </div>
        </div>
    </div>

    <div class="form-group">

        <div class="row mt-10">

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">

                3. Financial Year:
            </div>

            <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12">

                @Model.FYear (A.Y. @Model.AYear)

            </div>
        </div>
    </div>

    <div class="form-group">

        <div class="row mt-10">

            <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12">

                4. Employee Code:-
            </div>

            <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12">
                @Model.EmployeeCode
            </div>
        </div>
    </div>

    <table class="table table-bordered table-centered dt-responsive w-100">
        <thead>
            <tr>
                <th colspan="4" class="text-center">
                    Details of claims and evidence thereof
                </th>
            </tr>
            <tr>
                <th style="width:5%;">
                    Sl.No.
                </th>
                <th style="width:70%;" class="text-center">
                    Nature of claim
                </th>
                <th style="width:10%;" class="text-center">
                    Amount
                    (Rs.)
                </th>
                <th style="width:15%;">
                    Supporting
                    Evidence /
                    attached
                    (Yes/No)
                </th>
            </tr>

            <tr>
                <th class="text-center">
                    (1)
                </th>
                <th class="text-center">
                    (2)
                </th>
                <th class="text-center">
                    (3)
                </th>
                <th class="text-center">
                    (4)
                </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td class="text-center" valign="middle"> 1.</td>
                <td>
                    House Rent Allowance:
                    <ul style="list-style-type:none;">
                        <li>(i) Rent paid to the landlord</li>
                        <li>
                            (ii) Name of the landlord :
                            @Html.EditorFor(model => model.LandLordName, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "150" } })
                        </li>
                        <li>
                            (iii) Address of the landlord :

                            @Html.EditorFor(model => model.LandLordAddress, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "150" } })
                        </li>
                        <li>
                            (iv) Permanent Account No. of the landlord :
                            @Html.EditorFor(model => model.LandLordPANNo, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "10" } })
                        </li>
                    </ul>

                    <b>Note:</b> <u>
                        Permanent Account Number shall be furnished if the
                        aggregate rent paid during the previous year exceeds one lakh
                        rupees
                    </u>
                </td>
                <td>
                    .
                    <ul style="list-style-type:none;">
                        <li>

                            @Html.EditorFor(model => model.RentPaidToLandLord, new { htmlAttributes = new { @class = "bottamboarder pull-right text-right", @type = "number", @placeholder = "" } })
                            @Html.ValidationMessageFor(model => model.RentPaidToLandLord, "", new { @class = "text-danger pull-right" })
                        </li>

                    </ul>

                </td>

                <td class="text-center">

                    @ExtensionMethods.BoolToYesNo(Model.HasHRADocument)

                </td>
            </tr>

            <tr>
                <td class="text-center" valign="middle">2.</td>
                <td>Leave travel concessions or assistance</td>
                <td class="text-center">NA</td>
                <td class="text-center">NA</td>
            </tr>

            <tr>
                <td class="text-center" valign="bottom">3.</td>
                <td>
                    Deduction of interest on borrowing (u/s 24):
                    <ul style="list-style-type:none;">
                        <li>(i) Interest payable / paid to the lender</li>
                        <li>
                            (ii) Name of the lender :

                            @Html.EditorFor(model => model.LenderName, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "150" } })

                        </li>
                        <li>
                            (iii) Address of the lender :

                            @Html.EditorFor(model => model.LenderAddress, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "150" } })
                        </li>
                        <li>
                            (iv) Permanent Account Number of the lender

                            <ul style="list-style-type:none;">
                                <li>
                                    (a) Financial Institutions (if available) :
                                    @Html.EditorFor(model => model.Fin_Institute_PANNo, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "10" } })

                                    @Html.ValidationMessageFor(model => model.Fin_Institute_PANNo, "", new { @class = "text-danger pull-center" })
                                </li>

                                <li>
                                    (b) Employer (if available) :
                                    @Html.EditorFor(model => model.Employer_PANNo, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "10" } })
                                    @Html.ValidationMessageFor(model => model.Employer_PANNo, "", new { @class = "text-danger pull-center" })

                                </li>
                                <li>
                                    (c) Others : @Html.EditorFor(model => model.Other_PANNo, new { htmlAttributes = new { @class = "bottamboarder pull-right", @placeholder = "", @maxlength = "10" } })
                                    @Html.ValidationMessageFor(model => model.Other_PANNo, "", new { @class = "text-danger pull-center" })

                                </li>
                            </ul>
                        </li>
                    </ul>
                </td>
                <td class="text-center">

                    <ul style="list-style-type:none;">
                        <li>@Html.EditorFor(model => model.InterestPaidToLender, new { htmlAttributes = new { @class = "bottamboarder pull-right text-right", @type = "number", @placeholder = "" } })</li>

                    </ul>

                </td>
                <td class="text-center">

                    @ExtensionMethods.BoolToYesNo(Model.HasDeductionOfInterestDoc)
                </td>
            </tr>

            <tr>

                @Html.Partial("_DeductionUnderChapterVI(A)", Model)

            </tr>

            <tr>
                <td colspan="4" class="text-center">

                    Verification
                </td>
            </tr>

            <tr>

                <td></td>
                <td colspan="3">
                    I, <b>@Model.FullName </b>, son/daughter of <b>@Model.FatherName </b>. do hereby certify
                    that the information given above is complete and correct.

                </td>
            </tr>

            <tr>

                <td></td>
                <td colspan="3">
                    @*Place……………………………*@

                </td>
            </tr>

            <tr>

                <td></td>
                <td colspan="3">
                    <span class="pull-left">
                        Date: <b>@Model.SubmittedOn</b>
                    </span>

                    @*<span class="pull-right">
                            (Name of the employee)
                        </span>*@
                </td>
            </tr>

            <tr>

                <td></td>
                <td colspan="3">
                    <span class="pull-left">
                        Designation <b>@Model.Designation</b>.
                    </span>

                    <span class="pull-right">
                        Full Name: <b>@Model.FullName</b>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="form-group">

        <div class="row">

            <div class="col-lg-4 col-xl-4 col-sm-12 col-xs-12">

                Income from Previous Employee:
            </div>

        </div>
    </div>

    <div class="form-group">

        <div class="row">

            <div class="col-lg-4 col-xl-4 col-sm-12 col-xs-12">

                TDS deducted thereon:
            </div>

        </div>
    </div>

    @*@if (!Model.view.HasValue && Model.FormState < 2)*@
    @if (!Model.view.HasValue && btnShow)
    {
        <div class="pull-right div-action">

            <input type="submit" value="Save" id="btnAASave" name="ButtonType" class="btn btn-info  toggle-tooltip" title="Click here, to save the data." />
            <input type="submit" value="Save & Submit" id="btnAASaveSubmit" name="ButtonType" class="btn btn-info  toggle-tooltip" title="Click here, to save & submit the data." />

        </div>
    }
</div>




<style type="text/css">
    .bottamboarder {
        border: 0;
        outline: 0;
        background: transparent;
        border-bottom: 1px solid black;
    }

    ul li {
        padding: 5px;
    }
</style>
