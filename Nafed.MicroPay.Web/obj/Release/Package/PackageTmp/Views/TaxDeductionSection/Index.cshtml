@{
    ViewBag.Title = "Tax  Deduction Section";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mb-2">

    <div class="tab" role="tabpanel">
        <nav class="navbar navbar-expand-md  navbar-dark px-0">
            <!-- Brand -->
            <a class="navbar-brand d-xl-none d-md-none" href="#">Approval Menu</a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler bg-info" type="button" data-toggle="collapse" data-target="#collapsible_tab">
                <span class="fa fa-bars"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsible_tab" style="position: relative;z-index: 999999;">
                <ul class="nav nav-tabs" role="tablist" id="tabs">


                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip active" title="Section" data-toggle="tab" href="#DeductionSection">Section </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip" title="Sub Section" data-toggle="tab" href="#DeductionSubSection">Sub Section</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link toggle-tooltip" data-toggle="tab" title="Sub Section Description" href="#DeductionSubSectionDescription">Sub Section Description</a>
                    </li>
                </ul>
                </div>
            </nav>
                <!-- Tab panes -->
        <div class="tab-content tabs">
            <div id="DeductionSection" class="container tab-pane active fullwidth-container">
                <div id="div-DeductionSection">

                    @Html.Action("_GetDeductionSections", "TaxDeductionSection")
                </div>
            </div>
            <div id="DeductionSubSection" class="container tab-pane fade fullwidth-container">
                <div id="div-DeductionSubSection">

                   @Html.Action("_GetDeductionSubSections", "TaxDeductionSection")
                </div>
            </div>
            <div id="DeductionSubSectionDescription" class="container tab-pane fade fullwidth-container">

                <div id="div-DeductionSubSectionDescription">

                    @Html.Action("_GetDeductionSubSectionDescription", "TaxDeductionSection")

                  
                </div>
            </div>
        </div>
            </div>
    </div>