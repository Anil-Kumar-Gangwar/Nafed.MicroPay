@using Nafed.MicroPay.Model
@model  MicroPay.Web.Models.DeductionSubSectionVM



<div class="row">

    <div class="col-lg-7 col-xl-7 col-md-7 col-sm-7 col-xs-12">

        <div id="div-sub-section-grid">

            @Html.Partial("_SubSectionGridView", Model.subSectionList)

        </div>

    </div>

    <div class="col-lg-5 col-xl-5 col-md-5 col-sm-5 col-xs-12">

        @using (Ajax.BeginForm("_PostSubSectionForm", "TaxDeductionSection", new AjaxOptions
        {
            HttpMethod = "POST",
            OnSuccess = "formSubSection_OnSuccess"

        }))
        {
            <div id="div-sub-section-form">

                @Html.Partial("_SubSectionForm", Model)

            </div>
        }



    </div>

</div>

<script type="text/javascript">

    function formSubSection_OnSuccess(data) {
        if (data.success != undefined && data.success == "true") {
            commonMessage("success", data.msg);
            window.location.reload();
        }
        else {
            $("#div-section-form").html(data);
        }
    }
</script>
