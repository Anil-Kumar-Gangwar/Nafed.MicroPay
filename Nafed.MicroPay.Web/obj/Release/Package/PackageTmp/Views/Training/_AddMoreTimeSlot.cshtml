@using Nafed.MicroPay.Model
@*@model List<TrainingDateWiseTimeSlot>*@

@model MicroPay.Web.Models.TrainingViewModel

@{
    Layout = null;


}
<div class="form-group">
    <label class="font-weight-bold">Note- Add maximum 3 time slot(s) for a single date.</label>

</div>

<div class="form-group">

    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            @Html.Label("Select Date", new { @class = "label-control required" })

        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            @Html.DropDownListFor(model => model._Training.SelectedTrainingDateIndex, new SelectList(Model._Training.TrainingDates, "id", "value"), "Select", new { @class = "custom-select", @id = "ddl_dates" })
            @Html.ValidationMessage("DateFieldRequired", "", new { @class = "text-danger" })
        </div>

    </div>
</div>

<div class="form-group">

    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            @Html.Label("From Time", new { @class = "label-control " })


        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            @Html.EditorFor(model => model._Training.NewSlotFromTime, new { htmlAttributes = new { @class = "form-control", @type = "time", @id = "FromTime" } })
            @Html.ValidationMessage("FromTimeRequired", "", new { @class = "text-danger" })
            @Html.ValidationMessage("FromDateRangeValidation", "", new { @class = "text-danger" })

        </div>
    </div>
</div>

<div class="form-group">

    <div class="row">

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            @Html.Label("To Time", new { @class = "label-control " })

        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

            @Html.EditorFor(model => model._Training.NewSlotToTime, new { htmlAttributes = new { @class = "form-control", @type = "time", @id = "ToTime" } })
            @Html.ValidationMessage("ToTimeRequired", "", new { @class = "text-danger" })
            @Html.ValidationMessage("ToDateRangeValidation", "", new { @class = "text-danger" })

        </div>
    </div>
</div>


<div class="form-group">
    <div class="row">

        <div class="col-lg-8 col-xl-8 col-md-8 col-sm-12 col-xs-12">

            @Html.ValidationMessage("MaxTimeSlotValidation", "", new { @class = "text-danger" })
        </div>
        <div class="col-lg-4 col-xl-4 col-md-4 col-sm-12 col-xs-12 text-right">

            <input type="button" value="Add" id="btnAddMoreSlot" class="btn btn-info btn-md pull-center toggle-tooltip" title="Click here, to add new time slot." />

        </div>

    </div>
</div>


<script type="text/javascript">


</script>


