    $('.toggle-tooltip').tooltip();
    ///==== Adding jquery datatable reference to all master grid
    var table = $('#tblGrid').DataTable({
    });
    $('#tblGrid_length').find('select').addClass('custom-select');
    //========= End==================================================
</script>
